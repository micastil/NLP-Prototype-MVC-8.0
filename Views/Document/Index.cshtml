@model List<Document>

@{
	ViewData["Title"] = "Documentos";
}

@if (Model.Count > 0)
{
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Title</th>
				<th>Content</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Title</td>
					<td>@item.Content</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<h3>No hay documentos en la base de datos externa.</h3>
}
